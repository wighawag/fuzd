{
  "name": "fuzd-scheduler",
  "version": "0.6.0",
  "description": "execute transaction in future plus tx can be sealed using drand tlock",
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  },
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "require": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.cjs"
      },
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.mjs"
      }
    }
  },
  "files": [
    "dist",
    "src"
  ],
  "dependencies": {
    "fuzd-chain-protocol": "workspace:*",
    "fuzd-common": "workspace:*",
    "named-logs": "^0.3.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "ldenv": "^0.3.10",
    "pkgroll": "^2.5.0",
    "prettier": "^3.3.3",
    "typescript": "^5.6.3"
  },
  "scripts": {
    "build": "pkgroll",
    "dev": "pkgroll --watch",
    "format:check": "prettier --check .",
    "format": "prettier --write ."
  }
}
