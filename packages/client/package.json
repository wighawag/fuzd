{
  "name": "fuzd-client",
  "version": "0.6.0",
  "description": "default client for fuzd using tlock-js",
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  },
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "require": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.cjs"
      },
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.mjs"
      }
    }
  },
  "bin": {
    "fuzd": "dist/cli.cjs"
  },
  "files": [
    "dist",
    "src"
  ],
  "dependencies": {
    "commander": "^12.1.0",
    "fuzd-chain-protocol": "workspace:*",
    "fuzd-common": "workspace:*",
    "fuzd-executor": "workspace:*",
    "fuzd-scheduler": "workspace:*",
    "named-logs": "^0.3.0",
    "remote-account": "^0.2.0",
    "tlock-js": "^0.9.0",
    "viem": "^2.21.34"
  },
  "devDependencies": {
    "@types/node": "^22.7.9",
    "ldenv": "^0.3.10",
    "pkgroll": "^2.5.0",
    "prettier": "^3.3.3",
    "tsx": "^4.19.1",
    "typescript": "^5.6.3"
  },
  "scripts": {
    "build": "pkgroll",
    "dev": "pkgroll --watch",
    "format:check": "prettier --check .",
    "format": "prettier --write .",
    "tsx": "tsx"
  }
}
