{
  "name": "fuzd-server",
  "version": "0.6.0",
  "description": "fuzd server app",
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  },
  "type": "module",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/esm/index.d.ts",
        "default": "./dist/esm/index.js"
      }
    }
  },
  "files": [
    "dist",
    "src"
  ],
  "dependencies": {
    "@hono/swagger-ui": "^0.4.1",
    "@hono/typia-validator": "^0.0.5",
    "@scure/bip32": "^1.5.0",
    "@scure/bip39": "^1.4.0",
    "eip-1193": "^0.6.1",
    "eip-1193-jsonrpc-provider": "^0.4.2",
    "eip-1193-signer": "^0.0.5",
    "fuzd-chain-protocol": "workspace:*",
    "fuzd-common": "workspace:*",
    "fuzd-executor": "workspace:*",
    "fuzd-scheduler": "workspace:*",
    "fuzd-tlock-decrypter": "workspace:*",
    "hono": "^4.6.8",
    "named-logs": "^0.3.0",
    "remote-account": "^0.2.1",
    "remote-sql": "^0.0.5",
    "tlock-js": "npm:@bug-fix/tlock-js@0.9.0-fix.9",
    "viem": "^2.21.37"
  },
  "devDependencies": {
    "as-soon": "^0.0.9",
    "hono-typia-openapi": "^0.1.2",
    "ldenv": "^0.3.10",
    "prettier": "^3.3.3",
    "ts-patch": "^3.2.1",
    "typescript": "^5.6.3",
    "typia": "^6.11.3"
  },
  "scripts": {
    "prepare": "ts-patch install && typia patch",
    "openapi": "pnpm hto --app-file ./src/index.ts --title fuzd-server --app-type App  --output ./doc/openapi.json --description API --app-version api --tsconfig ./tsconfig.json",
    "build:ts": "pnpm openapi && tsc --project tsconfig.json && cp -R doc dist/doc",
    "build": "pnpm sql2ts && pnpm build:ts",
    "sql2ts": "node sql2ts.cjs executor scheduler",
    "sql2ts:watch": "pnpm sql2ts && as-soon -w ./src/schema/sql pnpm sql2ts",
    "css2ts": "node css2ts.cjs global",
    "css2ts:watch": "pnpm css2ts && as-soon -w ./src/schema/css pnpm css2ts",
    "dev": "as-soon -w src pnpm build:ts",
    "format:check": "prettier --check .",
    "format:write": "prettier --write ."
  }
}