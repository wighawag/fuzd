{
  "name": "remote-account",
  "version": "0.1.0",
  "description": "remote account based on hd keys",
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  },
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "require": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.cjs"
      },
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.mjs"
      }
    }
  },
  "files": [
    "dist",
    "src"
  ],
  "devDependencies": {
    "pkgroll": "^2.0.2",
    "rimraf": "^5.0.5",
    "tsx": "^4.9.3",
    "typescript": "^5.4.5"
  },
  "dependencies": {
    "@noble/hashes": "^1.4.0",
    "@noble/secp256k1": "^2.1.0",
    "@scure/bip32": "^1.4.0",
    "@scure/bip39": "^1.3.0"
  },
  "scripts": {
    "build": "pkgroll",
    "dev": "pkgroll --watch",
    "test": "tsx test/remote-account.test.ts"
  }
}
